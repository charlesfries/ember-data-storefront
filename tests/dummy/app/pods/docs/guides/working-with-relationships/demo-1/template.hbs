{{#if post}}

  {{#docs-demo as |demo|}}
    {{#demo.example name='working-with-relationships-demo-1.hbs'}}

      <div class="tr">
        <UiButton @style="small" @onClick={{this.reset}}>
          Reset
        </UiButton>
      </div>

      {{#liquid-if loadComments.lastSuccessful}}

        <p data-test-id="load-comments-count">
          The post has {{post.comments.length}} comments.
        </p>

      {{else}}

        <UiButton
          @onClick={{perform this.loadComments}}
          @disabled={{this.loadComments.isRunning}}
          @dataTestId="load-comments">
          {{if this.loadComments.isIdle "Load comments" "Loading..."}}
        </UiButton>

      {{/liquid-if}}

    {{/demo.example}}

    {{demo.snippet 'working-with-relationships-demo-1.js'}}
    {{demo.snippet 'working-with-relationships-demo-1.hbs'}}
  {{/docs-demo}}

{{else}}

  <p>Loading demo...</p>

{{/if}}
